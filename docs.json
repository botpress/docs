{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Botpress",
  "colors": {
    "primary": "#0090FF",
    "light": "#3B9EFF",
    "dark": "#0588F0"
  },
  "background": {
    "decoration": "grid",
    "color": {
      "light": "#FCFCFD",
      "dark": "#111113"
    }
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Guides"
      },
      {
        "tab": "For Developers",
        "pages": [
          "for-developers/introduction",
          {
            "group": "Integration",
            "pages": ["for-developers/integration/getting-started"]
          }
        ]
      },
      {
        "tab": "Webchat",
        "pages": [
          "webchat/introduction",
          {
            "group": "Inject Script",
            "pages": [
              "webchat/inject/getting-started",
              "webchat/inject/styling-your-webchat"
            ]
          },
          {
            "group": "Component Library",
            "pages": ["webchat/webchat-components/getting-started"]
          }
        ]
      },
      {
        "tab": "API Reference",
        "pages": [
          "api-reference/introduction",
          "api-reference/pagination",
          "api-reference/errors",
          {
            "group": "Chat API",
            "pages": ["api-reference/chat-api/introduction"]
          },
          {
            "group": "Admin API",
            "pages": [
              "api-reference/admin-api/getting-started",
              "api-reference/admin-api/concepts"
            ]
          },
          {
            "group": "Files API",
            "pages": ["api-reference/files-api/getting-started"]
          },
          {
            "group": "Tables API",
            "pages": ["api-reference/tables-api/getting-started"]
          },
          {
            "group": "Runtime Api",
            "pages": ["api-reference/runtime-api/getting-started"]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Community",
          "href": "https://discord.com/invite/botpress",
          "icon": "discord"
        },
        {
          "anchor": "Blog",
          "href": "https://botpress.com/blog",
          "icon": "newspaper"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://app.botpress.cloud"
    }
  },
  "footer": {
    "socials": {
      "x": "https://x.com/getbotpress",
      "github": "https://github.com/botpress",
      "linkedin": "https://www.linkedin.com/company/botpress",
      "youtube": "https://www.youtube.com/botpress",
      "discord": "https://discord.com/invite/botpress"
    }
  }
}
